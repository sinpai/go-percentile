#!/usr/bin/env ruby
require 'benchmark/ips'
require 'ffi'
require 'array_stats'

module PercentileBench
  extend FFI::Library
  ffi_lib File.expand_path("./ext/percentile-go/percentile.so", File.dirname(__FILE__))
  attach_function :gopercentile, :percentile, [:pointer, :float], :float
end
test_array = [34.5, 56.4, 104.32, 4.5, 90.0]
offset = 0
percent = 50

puts "\n================== Test Percentile =================="
Benchmark.ips do |x|
  x.report("Go percentile") do |times|
    i = 0
    while i < times
      pointer = FFI::MemoryPointer.new :float, percent
      pointer.put_array_of_float64 offset, test_array
      result_pointer = PercentileBench.gopercentile(pointer, percent)
      result_pointer.read_double
      i += 1
    end
  end

  x.report("Array stats percentile") do |times|
    i = 0
    while i < times
      test_array.percentile(50)
      i += 1
    end
  end

  x.compare!
end
